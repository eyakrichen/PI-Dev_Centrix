{% extends 'base-back.html.twig' %}

{% block title %}Players index{% endblock %}


{% block body %}

                     {{ form_start(form) }}
<div class="form-row align-items-end" >
    <div class="col">
        {{ form_row(form.nom) }}
    </div>
    <div class="col">
        <div class="form-group">
            <button type="submit" class="btn btn-success">Rechercher</button>
        </div>
    </div>
</div>
               {{ form_end(form) }}


    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
    <h1>Players index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Age</th>
                <th>Description</th>
                <th>Role</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for player in players %}
            <tr>
                <td>{{ player.id }}</td>
                <td>{{ player.name }}</td>
                <td>{{ player.age }}</td>
                <td>{{ player.description }}</td>
                <td>{{ player.role }}</td>
                <td>
                    <a href="{{ path('app_players_show', {'id': player.id}) }}">show</a>
                    <a href="{{ path('app_players_edit', {'id': player.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_players_new') }}">Create new</a>
{% endblock %}
