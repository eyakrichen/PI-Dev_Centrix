{% block body %}


<h1 align="center"  width="100%" style="color: #023163">Liste des produits</h1> <hr>


<table class="table table-striped table-bordered" border="2"  >
    <thead>


    <tr>

        <th class="wd-15p" style="color: #135fb0">ID</th>
        <th class="wd-15p" style="color: #135fb0">Nom</th>
        <th class="wd-15p" style="color: #135fb0">Description</th>
        <th class="wd-15p" style="color: #135fb0">Prix</th>
        <th class="wd-15p" style="color: #135fb0">date</th>
    </tr>
    </thead>

    <tbody>
    {% for product in Products  %}

        <tr>
            <td >{{ product.id }}</td>
            <td >{{ product.name }}</td>
            <td>{{ product.description }}</td>
            <td >{{ product.price }}</td>
            <td >{{ product.releaseDate }}</td>
        </tr>

    {% endfor %}
    </tbody>


</table>
{% endblock %}