{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h1>Product</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.description }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ product.price }}</td>
            </tr>
            <tr>
                <th>Rate</th>
                <td>{{ product.rate }}</td>
            </tr>
            <tr>
                <th>Plateform</th>
                <td>{{ product.plateform }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ product.image }}</td>
            </tr>
            <tr>
                <th>ReleaseDate</th>
                <td>{{ product.releaseDate ? product.releaseDate|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('product_back_index') }}">back to list</a>

    <a href="{{ path('product_back_edit', {'id': product.id}) }}">edit</a>

    {{ include('product_back/_delete_form.html.twig') }}
{% endblock %}
