{% extends 'base_back.html.twig' %}

{% block body %}
    <h1>BadWords index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Word</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for bad_word in bad_words %}
            <tr>
                <td>{{ bad_word.id }}</td>
                <td>{{ bad_word.word }}</td>
                <td>
                    <a href="{{ path('app_bad_words_show', {'id': bad_word.id}) }}">show</a>
                    <a href="{{ path('app_bad_words_edit', {'id': bad_word.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_bad_words_new') }}">Create new</a>
{% endblock %}
